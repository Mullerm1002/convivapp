<div class="message-container <%= "active_user" if message.user == current_user  %>" id="message-<%= message.id %>" >
    
    
  <p class="author mb-0"><%= message.user.first_name %></p>
  <i>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %></p>
</div>
