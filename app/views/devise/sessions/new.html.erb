<div class="sign-in">
    <h1>Connectez-vous</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :Votre_mot_de_passe %><br />
      <%= f.password_field :passwordbis, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Je me connecte", class:"cta-orange" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
